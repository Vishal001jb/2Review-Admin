  <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
    <item name="tabTextColor">#707070</item>
    <item name="tabSelectedTextColor">#00A859</item>
    <item name="tabIndicatorColor">#00A859</item>
    <item name="android:textStyle">bold</item>
    <item name="tabTextAppearance">@style/TextAppearance.AppCompat.Subhead.Inverse</item>

  </style>

  <style name="edittextStyle" >
    <item name="android:ems">10</item>
    <item name="android:singleLine">true</item>
    <item name="android:textColor" >#ffffff</item>
    <item name="android:typeface"> monospace</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:singleLine">true</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:buttonTint">#ffffff</item>

    <item name="android:padding">10dp</item>
    <item name="android:drawablePadding">10dp</item>
  </style>

  <style name="btn">
    <item name="android:background">@drawable/btn</item>
    <item name="android:textColor">#ffffff</item>
    <item name="android:layout_width">100dp</item>
    <item name="android:layout_height">40dp</item>
    <item name="android:shadowColor">#A8A8A8</item>
    <item name="android:shadowDx">0</item>
    <item name="android:shadowDy">0</item>
    <item name="android:shadowRadius">50</item>
    <item name="android:layout_marginRight">20dp</item>
    <item name="android:layout_marginLeft">20dp</item>

    <item name="android:fontFamily">sans-serif-condensed</item>
  </style>
  <style name="checkbox">
    <item name="android:layout_marginLeft">5dp</item>
    <item name="android:textColor">#ffffff</item>
    <item name="android:textColorLink">#ffffff</item>
    <item name="android:buttonTint">#ffffff</item>
  </style>
  <style name="textinputlayout" >
    <item name="android:layout_marginTop">10dp</item>
    <item name="android:layout_marginBottom">10dp</item>
    <item name="android:layout_marginRight">10dp</item>
    <item name="android:layout_marginLeft">10dp</item>
    <item name="android:textColorHint">#ffffff</item>
    <item name="android:colorControlNormal">#ffffff</item>
    <item name="android:colorControlActivated">#ffffff</item>
    <item name="android:colorControlHighlight">#ffffff</item>


  </style>



  <style name="MyTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="windowNoTitle">true</item>
    <item name="windowActionBar">false</item>
    <item name="colorPrimary">#2196F3</item>
    <item name="colorPrimaryDark">#1976D2</item>
    <item name="colorAccent">#FF4081</item>
  </style>
  <style name="MyTheme" parent="MyTheme.Base">
  </style>


  <style name="Theme.Splash" parent="android:Theme">
    <item name="android:windowBackground">@drawable/back</item>
    <item name="android:windowNoTitle">true</item>
  </style>

  <style name="MyCustomTheme" parent="android:Theme.Material.Light">
    <!-- Override the app bar color -->
    <item name="android:colorPrimary">@color/my_blue</item>
    <!-- Override the color of UI controls -->
    <item name="android:colorAccent">@color/my_blue</item>
    <!--<item name="android:textColorPrimary">@color/my_white</item>-->
  </style>


</resources>